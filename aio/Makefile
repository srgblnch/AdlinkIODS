CLASS      = AdlinkAIO
MAJOR_VERS = 1
MINOR_VERS = 0
RELEASE    = Release_$(MAJOR_VERS)_$(MINOR_VERS)

#-----------------------------------------
#	Set default home directories
#-----------------------------------------

TANGO_HOME  ?=  /homelocal/sicilia/tango
OMNI_HOME   ?=  /homelocal/sicilia/omniorb
DASK_HOME   ?=  /homelocal/sicilia/drivers/adlink
SUPER_HOME  ?=  /homelocal/sicilia/AbstractClasses/AnalogDAQ/
D2K_LIB     ?=  pci_dask2k
GSL_HOME    ?=  /usr

64bits=$(shell getos | grep _64$ | wc -w)
DESTOS=$(shell getos)

CPP_SERVERS  =  $(TANGO_HOME)/cppserver

ifdef sb_debug
	DEBUG_SHARED_BUFFER = -D_RSUNE_ENABLE_SHAREDBUFFER_DEBUG
else
	DEBUG_SHARED_BUFFER =
endif

# ADLD_GET_FULL_BUFFER_  0:No 1:last 2:Full
ifdef no_debug
	DEBUG = -O2 -DNDEBUG -DADLD_GET_FULL_BUFFER_=2
else
	DEBUG = -g -DADLD_GET_FULL_BUFFER_=1 -DDEBUG_ADLINK_DEVICE $(DEBUG_SHARED_BUFFER)
endif

ifdef _solaris
CC = CC 
BIN_DIR=$(OS)_CC

AR_SL = $(CC) -mt -G
VERS_OPT = -h
SL_EXT = so
endif

ifdef linux
CC = c++
CC_SHLIB = $(CC)  -fPIC
AR = ar
BIN_DIR=$(OS)

AR_SL = $(CC) -fPIC -shared 
SL_EXT = so
VERS_OPT = -Wl,-soname,
endif

INCLUDE_DIRS =  -I$(TANGO_HOME)/include/tango \
		-I$(SUPER_HOME)/include \
		-I$(OMNI_HOME)/include \
		-I$(DASK_HOME)/include \
		-I$(GSL_HOME)/include \
		-I. \
		-I../include \
		-I$(CPP_SERVERS)/include

OBJS_DIR    = obj-$(DESTOS)
LIB_DIRS    = -L$(TANGO_HOME)/lib \
		-L$(OMNI_HOME)/lib \
		-L$(DASK_HOME)/lib 

ifeq ("$(64bits)", "1")
 LIB_DIRS += -L$(GSL_HOME)/lib64
else
 LIB_DIRS += -L$(GSL_HOME)/lib
endif

TARGET_LIB = $(CPP_SERVERS)/lib/libtgclasses.a


#-----------------------------------------
#	Set  CXXFLAGS and LFLAGS
#-----------------------------------------
ifdef _solaris
CXXFLAGS =  $(DEBUG) -mt -D_PTHREADS $(INCLUDE_DIRS)
LFLAGS =  $(DEBUG) $(LIB_DIRS)  		\
				-ltango			\
				-llog4tango		\
				-lomniORB4 		\
				-lomniDynamic4	\
				-lomnithread	\
				-lCOS4			\
				-lpthread		\
				-lposix4 -lsocket -lnsl
endif

ifdef linux
CXXFLAGS =  $(DEBUG) -D_REENTRANT $(INCLUDE_DIRS) -D_RSUNE_ENABLE_SHAREDBUFFER_RECORD_TIME 
#DFC
#CXXFLAGS =  $(DEBUG) -D_REENTRANT $(INCLUDE_DIRS) -D_RSUNE_ENABLE_SHAREDBUFFER_RECORD_TIME -D_RSUNE_ENABLE_SHAREDBUFFER_DEBUG

LFLAGS =  $(DEBUG) $(LIB_DIRS)  		\
				-ltango			\
				-llog4tango		\
				-lomniORB4 		\
				-lomniDynamic4	\
				-lomnithread	\
				-lCOS4			\
				-ldl -lpthread \
				-l$(D2K_LIB) \
				-lpci_dask \
				-lrt
endif




#-----------------------------------------
#	Set  dependences
#-----------------------------------------

SVC_OBJS = 	\
		$(OBJS_DIR)/OutputDeviceInterface.o \
		$(OBJS_DIR)/StatsSettings.o \
		$(OBJS_DIR)/StatsCalculator.o \
		$(OBJS_DIR)/InputDevicePSDASK.o \
		$(OBJS_DIR)/InputDeviceD2K.o \
		$(OBJS_DIR)/OutputBehaviour.o \
		$(OBJS_DIR)/AdlinkDeviceThread.o \
		$(OBJS_DIR)/InputBehaviour.o \
		$(OBJS_DIR)/InputBuffer.o \
		$(OBJS_DIR)/$(CLASS)Class.o	\
		$(OBJS_DIR)/$(CLASS)StateMachine.o	\
		$(OBJS_DIR)/$(CLASS).o 

SHLIB_OBJS = $(OBJS_DIR)/$(CLASS)Class.so.o	\
		$(OBJS_DIR)/$(CLASS)StateMachine.so.o	\
		$(OBJS_DIR)/$(CLASS).so.o


SVC_INC = $(CLASS)Class.h \
		$(CLASS).h


$(OBJS_DIR)/%.o: %.cpp $(SVC_INC)
	$(CC) $(CXXFLAGS) -c $< -o $(OBJS_DIR)/$*.o
			
$(OBJS_DIR)/%.so.o: %.cpp $(SVC_INC)
	$(CC_SHLIB) $(CXXFLAGS) -c $< -o $(OBJS_DIR)/$*.so.o


#-----------------------------------------
#	 Make Entry
#-----------------------------------------
#all: $(CLASS)
all: lib
	
$(CLASS):	make_obj_dir make_bin_dir $(SVC_OBJS)
	$(CC) $(SVC_OBJS) -o $(CLASS) $(LFLAGS)
	@mv $(CLASS) bin/$(CLASS)

shlib:	make_obj_dir make_shlib_dir $(SHLIB_OBJS)
	$(AR_SL) -o \
		shlib/$(CLASS).$(SL_EXT).$(MAJOR_VERS).$(MINOR_VERS) \
		$(VERS_OPT)$(CLASS).$(SL_EXT).$(MAJOR_VERS) \
		$(SHLIB_OBJS) $(LFLAGS)
	@rm -f shlib/$(CLASS).$(SL_EXT)
	@cd  shlib/$(BIN_DIR); \
		ln -s $(CLASS).$(SL_EXT).$(MAJOR_VERS).$(MINOR_VERS) $(CLASS).$(SL_EXT)

clean:
	rm -f $(OBJS_DIR)/*.o  \
	$(OBJS_DIR)/*.so.o \
	bin/$(CLASS) \
	$(CLASS)-$(DESTOS).a \
	*~ \
	core

make_obj_dir:
	@mkdir -p obj-$(DESTOS)

make_bin_dir:
	@mkdir -p bin

make_shlib_dir:
	@mkdir -p shlib
	
#-----------------------------------------
#	 Install binary file
#-----------------------------------------
install:
	cp bin/$(CLASS)  $(TANGO_HOME)/bin

#-----------------------------------------
#	 Update class library and header files
#	recompile without debug mode.
#-----------------------------------------
#lib: clean
#	@make no_debug=1
#	cp *.h $(CPP_SERVERS)/include
#	ar ruv $(TARGET_LIB) $(CLASS).o
#	ar ruv $(TARGET_LIB) $(CLASS)Class.o
#	ar ruv $(TARGET_LIB) $(CLASS)StateMachine.o
#	ident  $(TARGET_LIB) | grep $(CLASS)

lib: make_obj_dir $(SVC_OBJS)
	ar rc ./$(CLASS)-$(DESTOS).a $(SVC_OBJS)



## UNIT TESTING

test:
	echo No tests to run

header-%:
	grep $*.h -l *.cpp | xargs -n1 touch
	grep $*.h -l *.h | xargs -n1 -IOLLUHEADER make header-OLLUHEADER

#----------------------------------------------------
#	Tag the CVS module corresponding to this class
#----------------------------------------------------
tag:
	@cvstag "$(CLASS)-$(RELEASE)"
	@make   $(CLASS)
	@make show_tag

show_tag:
	@cvstag -d 

